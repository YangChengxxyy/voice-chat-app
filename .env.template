# VoiceChat Mini 环境变量配置

# === 开发环境配置 ===
NODE_ENV=development

# === Socket.io 服务器配置 ===
# 服务器端口
PORT=3001

# CORS 允许的源
CORS_ORIGIN=http://localhost:3000

# === 前端配置 ===
# Socket.io 服务器地址（前端使用）
NEXT_PUBLIC_SERVER_URL=http://localhost:3001

# 是否启用调试模式
NEXT_PUBLIC_DEBUG=false

# === WebRTC 配置 ===
# STUN 服务器（用于 NAT 穿透）
NEXT_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302

# TURN 服务器（生产环境推荐，用于复杂网络环境）
# NEXT_PUBLIC_TURN_SERVERS=turn:your-turn-server.com:3478
# NEXT_PUBLIC_TURN_USERNAME=your-username
# NEXT_PUBLIC_TURN_PASSWORD=your-password

# === 房间配置 ===
# 每个房间最大用户数
NEXT_PUBLIC_MAX_USERS_PER_ROOM=4

# 房间空闲清理时间（毫秒）
ROOM_CLEANUP_INTERVAL=1800000

# === 生产环境配置示例 ===
# NODE_ENV=production
# PORT=3001
# CORS_ORIGIN=https://your-domain.vercel.app
# NEXT_PUBLIC_SERVER_URL=https://your-socket-server.railway.app
# NEXT_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# === Railway 部署变量 ===
# RAILWAY_STATIC_URL（自动设置）
# RAILWAY_PUBLIC_DOMAIN（自动设置）

# === Vercel 部署变量 ===
# VERCEL_URL（自动设置）
# VERCEL_ENV（自动设置）

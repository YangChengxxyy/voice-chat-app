# 服务器配置
PORT=3001
NODE_ENV=development

# 客户端配置
NEXT_PUBLIC_SERVER_URL=http://localhost:3001

# WebRTC配置
# STUN服务器配置（可选，默认使用Google的STUN服务器）
# NEXT_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# TURN服务器配置（可选，用于NAT穿透）
# NEXT_PUBLIC_TURN_SERVERS=turn:your-turn-server.com:3478
# NEXT_PUBLIC_TURN_USERNAME=your-username
# NEXT_PUBLIC_TURN_PASSWORD=your-password

# 应用配置
NEXT_PUBLIC_APP_NAME=VoiceChat Mini
NEXT_PUBLIC_MAX_USERS_PER_ROOM=4

# 调试配置
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# 安全配置（生产环境）
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# SESSION_SECRET=your-session-secret
# JWT_SECRET=your-jwt-secret

# 数据库配置（如果需要持久化）
# DATABASE_URL=postgresql://username:password@localhost:5432/voicechat
# REDIS_URL=redis://localhost:6379

# 监控和日志配置（可选）
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info

# SSL配置（生产环境HTTPS）
# SSL_KEY_PATH=/path/to/ssl/key
# SSL_CERT_PATH=/path/to/ssl/cert
